<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".YapePaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Header FOOD FEST -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOD"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#00D4FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEST"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#FF007A"
                android:layout_marginTop="-8dp" />

        </LinearLayout>

        <!-- Logo Yape -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_yape_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:scaleType="fitCenter" />

        <!-- Instrucción -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresa tu celular yape"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />

        <!-- Campo número de celular -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de celular"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:hint="9########"
                android:textColor="#333333"
                android:textSize="16sp"
                android:inputType="phone"
                android:maxLength="9"
                android:textColorHint="#999999" />

        </LinearLayout>

        <!-- Campo código de aprobación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Código de aprobación"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_approval_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:hint="••••••"
                android:textColor="#333333"
                android:textSize="16sp"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:textColorHint="#999999" />

        </LinearLayout>

        <!-- Texto informativo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Encuéntralo en el menú de Yape"
            android:textSize="12sp"
            android:textColor="#999999"
            android:textAlignment="center"
            android:layout_marginBottom="30dp" />

        <!-- Botón de pago -->
        <Button
            android:id="@+id/btn_pay_yape"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="YAPEAR S/ 87.20"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#FF007A"
            android:layout_marginTop="10dp" />

        <!-- Espaciador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>