<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".TransferenciaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título FOOD FEST -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOD"
                android:textColor="#00D4FF"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEST"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#FF007A"
                android:layout_marginTop="-8dp" />

        </LinearLayout>

        <!-- Título Pago con Transferencia -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transferencias Bancarias y Depósitos"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Instrucciones PagoEfectivo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#E8F5E9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿Cómo realizar tu compra con PagoEfectivo?"
                    android:textSize="16sp"
                    android:textColor="#2E7D32"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Luego de haber dado click en pagar, recibirás un e-mail con el código CIP de PagoEfectivo que tendrá validez solo por 24 horas."
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ Depósitos en efectivo vía PagoEfectivo"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paga en BBVA, BCP, Interbank, Scotiabank, BanBif, Western Union, Tambor+, Kasnet, Full Carga, Red Digital, Money Gram, Caja Arequipa, Disashop, en cualquier agente o agencia autorizada a nivel nacional."
                    android:textSize="12sp"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✓ Transferencias bancarias vía PagoEfectivo"
                    android:textSize="14sp"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paga en BBVA, BCP, Interbank, Scotiabank, BanBif, Caja Arequipa, a través de la banca por internet o banca móvil en la opción pago de servicios."
                    android:textSize="12sp"
                    android:textColor="#2E7D32" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Campo Email para envío del CIP -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL PARA ENVÍO DEL CÓDIGO CIP"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_email"
                    android:tint="#FF007A" />

                <EditText
                    android:id="@+id/etCipEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:hint="javier.urbino1994@gmail.com"
                    android:textColorHint="#999999"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

        </LinearLayout>



        <!-- Botón Pagar -->
        <Button
            android:id="@+id/btnPagarTransferencia"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="PAGAR S/ 99.75"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#FF007A" />

    </LinearLayout>

</ScrollView>