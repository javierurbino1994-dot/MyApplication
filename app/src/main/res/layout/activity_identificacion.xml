<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
tools:context=".IdentificacionActivity">

<!-- Título FOOD FEST -->
<LinearLayout
    android:id="@+id/titleContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="40dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FOOD"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#00D4FF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FEST"
        android:textSize="42sp"
        android:textStyle="bold"
        android:textColor="#FF007A"
        android:layout_marginTop="-8dp" />

</LinearLayout>

<!-- Sección Identificación -->
<LinearLayout
    android:id="@+id/identificacionHeader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_constraintTop_toBottomOf="@id/titleContainer"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identificación"
        android:textSize="18sp"
        android:textColor="#FF007A"
        android:textStyle="bold" />

    <View
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:background="#FF007A"
        android:layout_marginTop="4dp" />

</LinearLayout>

<!-- ScrollView para el formulario -->
<ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:padding="24dp"
    app:layout_constraintTop_toBottomOf="@id/identificacionHeader"
    app:layout_constraintBottom_toTopOf="@id/btnContinuar"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Campo NOMBRE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person"
                    android:tint="#FF007A"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/etNombre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:hint="Ingresa tu nombre"
                    android:textColorHint="#999999" />

            </LinearLayout>

        </LinearLayout>

        <!-- Campo APELLIDO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="APELLIDO"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person"
                    android:tint="#FF007A"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/etApellido"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:hint="Ingresa tu apellido"
                    android:textColorHint="#999999" />

            </LinearLayout>

        </LinearLayout>

        <!-- Campo EMAIL -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_email"
                    android:tint="#FF007A"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:hint="Ingresa tu email"
                    android:textColorHint="#999999"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

        </LinearLayout>

        <!-- Campo TELÉFONO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TELÉFONO"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_phone"
                    android:tint="#FF007A"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:hint="Ingresa tu teléfono"
                    android:textColorHint="#999999"
                    android:inputType="phone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Campo DNI O CARNET DE EXTRANJERÍA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DNI O CARNET DE EXTRANJERÍA"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_id_card"
                    android:tint="#FF007A"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/etDocumento"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:hint="Ingresa tu documento"
                    android:textColorHint="#999999"
                    android:inputType="number" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>

<!-- Botón Continuar -->
<Button
    android:id="@+id/btnContinuar"
    android:layout_width="0dp"
    android:layout_height="55dp"
    android:text="Continuar"
    android:textColor="#FFFFFF"
    android:textSize="18sp"
    android:textStyle="bold"
    android:backgroundTint="#FF007A"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>