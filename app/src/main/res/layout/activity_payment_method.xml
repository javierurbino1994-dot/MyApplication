<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="24dp"
    tools:context=".PaymentMethodActivity">

    <!-- Header con título FOOD FEST -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOOD"
            android:textSize="48sp"
            android:textStyle="bold"
            android:background="@drawable/gradient_blue"
            android:textColor="@android:color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FEST"
            android:textSize="48sp"
            android:textStyle="bold"
            android:background="@drawable/gradient_pink"
            android:textColor="@android:color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Subtítulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige un medio de pago"
        android:textSize="18sp"
        android:textColor="#666666"
        android:layout_marginBottom="32dp" />

    <!-- RadioGroup para métodos de pago -->
    <RadioGroup
        android:id="@+id/radio_group_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Opción 1: Tarjeta de crédito y débito -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/payment_option_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rb_credit_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FF1976D2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tarjeta de crédito y débito"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Realiza tu pago en cuotas o directo"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginStart="44dp"
                android:layout_marginTop="4dp" />

            <!-- Logos de tarjetas REALES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_visa"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mastercard"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_diners"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_amex"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </LinearLayout>

        <!-- Opción 2: Código QR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/payment_option_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RadioButton
                    android:id="@+id/rb_qr_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#FF1976D2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Código QR Usando tu billetera electrónica"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp" />

            </LinearLayout>

            <!-- Logos de billeteras REALES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_bim"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_plin"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_agora"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_ligo"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </LinearLayout>

        <!-- Opción 3: Pago con Yape -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/payment_option_background"
            android:padding="16dp"
            android:gravity="center_vertical">

            <RadioButton
                android:id="@+id/rb_yape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FF1976D2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pago con Yape"
                android:textSize="16sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />

            <!-- Logo de Yape REAL -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_yape_logo"
                android:scaleType="fitCenter" />

        </LinearLayout>

    </RadioGroup>

    <!-- Espaciador -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Botón Continuar -->
    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Continuar"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/gradient_button"
        android:layout_marginTop="32dp" />

</LinearLayout>