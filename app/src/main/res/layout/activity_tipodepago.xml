<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".TipodepagoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título FOOD FEST -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOD"
                android:textColor="#00D4FF"
                android:textSize="36sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEST"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#FF007A"
                android:layout_marginTop="-8dp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Título Elige un medio de pago -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Elige un medio de pago"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="30dp"
            tools:ignore="HardcodedText" />

        <!-- Opción 1: Tarjeta de crédito/débito -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:clickable="false"
                android:focusable="false">

                <!-- Header de la opción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="false"
                    android:focusable="false">

                    <RadioButton
                        android:id="@+id/rbTarjeta"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:buttonTint="#FF007A"
                        tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Tarjeta de crédito y débito"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <!-- 5 imágenes de tarjetas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:clickable="false"
                    android:focusable="false">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_visa"
                        android:scaleType="fitCenter"
                        android:layout_margin="4dp"
                        android:contentDescription="Visa"
                        android:clickable="false"
                        android:focusable="false"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_mastercard"
                        android:scaleType="fitCenter"
                        android:layout_margin="4dp"
                        android:contentDescription="Mastercard"
                        android:clickable="false"
                        android:focusable="false"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_amex"
                        android:scaleType="fitCenter"
                        android:layout_margin="4dp"
                        android:contentDescription="American Express"
                        android:clickable="false"
                        android:focusable="false"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_diners"
                        android:scaleType="fitCenter"
                        android:layout_margin="4dp"
                        android:contentDescription="Diners Club"
                        android:clickable="false"
                        android:focusable="false"
                        tools:ignore="HardcodedText" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:src="@drawable/union_pay"
                        android:scaleType="fitCenter"
                        android:layout_margin="4dp"
                        android:contentDescription="Discover"
                        android:clickable="false"
                        android:focusable="false"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Opción 2: Transferencias Bancarias -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTransferencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:clickable="false"
                android:focusable="false">

                <!-- Header de la opción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="false"
                    android:focusable="false">

                    <RadioButton
                        android:id="@+id/rbTransferencia"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:buttonTint="#FF007A"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Transferencias Bancarias y depósitos en efectivo"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <!-- Imagen de transferencia -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:src="@drawable/pagoefectivo"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="12dp"
                    android:contentDescription="Transferencia bancaria"
                    android:clickable="false"
                    android:focusable="false"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Opción 3: Pago con Yape -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardYape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            android:clickable="false"
            android:focusable="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:clickable="false"
                android:focusable="false">

                <!-- Header de la opción -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="false"
                    android:focusable="false">

                    <RadioButton
                        android:id="@+id/rbYape"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:buttonTint="#FF007A"
                        tools:ignore="TouchTargetSizeCheck" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Pago con Yape"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <!-- Imagen de Yape -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Pago con Yape"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_yape_logo"
                    android:clickable="false"
                    android:focusable="false"
                    tools:ignore="HardcodedText" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botón Continuar -->
        <Button
            android:id="@+id/btnContinuar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CONTINUAR"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#FF007A"
            android:enabled="false"
            tools:ignore="HardcodedText,VisualLintButtonSize" />

    </LinearLayout>

</ScrollView>