<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp"
    tools:context=".TarjetaPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- TÃ­tulo FOOD FEST -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOD"
                android:textColor="#00D4FF"
                android:textSize="36sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEST"
                android:textSize="42sp"
                android:textStyle="bold"
                android:textColor="#FF007A"
                android:layout_marginTop="-8dp" />

        </LinearLayout>

        <!-- TÃ­tulo Pago con Tarjeta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pago con Tarjeta"
            android:textSize="20sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Advertencia sobre compras por internet -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#FFF9E6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Recuerda activar las compras por internet con tu banco"
                    android:textSize="14sp"
                    android:textColor="#E65100"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Campo NÃºmero de Tarjeta -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NÃšMERO DE TARJETA"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_card_1"
                    android:tint="#FF007A"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/etCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:hint="1234-5678-9012-3456"
                    android:textColorHint="#999999"
                    android:inputType="number"
                    android:maxLength="23" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Fecha de ExpiraciÃ³n y CVV en una fila -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <!-- Fecha de ExpiraciÃ³n -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FECHA DE EXPIRACIÃ“N"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_background_white"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendario"
                        android:tint="#FF007A"
                        tools:ignore="UseAppTint" />

                    <EditText
                        android:id="@+id/etExpiryDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        android:hint="MM/AA"
                        android:textColorHint="#999999"
                        android:inputType="number"
                        android:maxLength="5" />

                </LinearLayout>

            </LinearLayout>

            <!-- CVV -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CVV"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    android:background="@drawable/edittext_background_white"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_card_1"
                        android:tint="#FF007A"
                        tools:ignore="UseAppTint" />

                    <EditText
                        android:id="@+id/etCvv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="12dp"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:background="@android:color/transparent"
                        android:padding="0dp"
                        android:hint="***"
                        android:textColorHint="#999999"
                        android:inputType="numberPassword"
                        android:maxLength="4" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Campo Nombre del Titular -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE DEL TITULAR"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_person"
                    android:tint="#FF007A"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/etCardHolder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:hint=" Javier Obregon"
                    android:textColorHint="#999999"
                    android:inputType="textCapCharacters" />

            </LinearLayout>

        </LinearLayout>

        <!-- Campo Email para Voucher -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL PARA ENVÃO DE VOUCHER"
                android:textSize="14sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background_white"
                android:padding="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_email"
                    android:tint="#FF007A"
                    tools:ignore="UseAppTint" />

                <EditText
                    android:id="@+id/etVoucherEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="12dp"
                    android:text=""
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:hint="javier@gmail.com"
                    android:textColorHint="#999999"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

        </LinearLayout>


        <!-- BotÃ³n Pagar -->
        <Button
            android:id="@+id/btnPagarTarjeta"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="PAGAR S/ 99.75"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#FF007A" />

    </LinearLayout>

</ScrollView>